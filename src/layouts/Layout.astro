---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "OCR Danger Extreme - Carrera de obst치culos extrema. 1 de Agosto 2026, Caleta de Fuste, Fuerteventura. 6km de pura adrenalina."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL('/og-image.jpg', Astro.site);

// Structured Data for Event
const eventSchema = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  "name": "OCR Danger Extreme 2026",
  "description": description,
  "startDate": "2026-08-01T09:00:00+01:00",
  "endDate": "2026-08-01T18:00:00+01:00",
  "eventStatus": "https://schema.org/EventScheduled",
  "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
  "location": {
    "@type": "Place",
    "name": "Caleta de Fuste",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Caleta de Fuste",
      "addressRegion": "Fuerteventura",
      "postalCode": "35610",
      "addressCountry": "ES"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": 28.3997,
      "longitude": -13.8597
    }
  },
  "organizer": {
    "@type": "Organization",
    "name": "OCR Danger Extreme",
    "url": Astro.site
  },
  "offers": {
    "@type": "Offer",
    "url": "https://sportmaniacs.com",
    "availability": "https://schema.org/PreOrder",
    "validFrom": "2026-03-01"
  },
  "sport": "Obstacle Course Racing",
  "image": ogImage.toString()
};

// Organization Schema
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "OCR Danger Extreme",
  "url": Astro.site,
  "logo": new URL('/logo.webp', Astro.site).toString(),
  "sameAs": [],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer service",
    "availableLanguage": ["Spanish", "English"]
  }
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="OCR, Danger Extreme, carrera obst치culos, Caleta de Fuste, Antigua, Fuerteventura, Canarias, running, extreme, obstacle course racing, 2026" />
    <meta name="author" content="OCR Danger Extreme" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Geo Meta Tags -->
    <meta name="geo.region" content="ES-CN" />
    <meta name="geo.placename" content="Caleta de Fuste, Fuerteventura" />
    <meta name="geo.position" content="28.3997;-13.8597" />
    <meta name="ICBM" content="28.3997, -13.8597" />

    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/logo.webp" />
    <link rel="icon" type="image/jpeg" href="/logo.jpg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.webp', Astro.site)} />
    <meta property="og:image:secure_url" content={new URL('/og-image.webp', Astro.site)} />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="OCR Danger Extreme - Carrera de obst치culos extrema en Fuerteventura" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="OCR Danger Extreme" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/og-image.webp', Astro.site)} />
    <meta name="twitter:image:alt" content="OCR Danger Extreme - Carrera de obst치culos extrema en Fuerteventura" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#E53935" />
    <meta name="msapplication-TileColor" content="#E53935" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://sportmaniacs.com" />
    <link rel="dns-prefetch" href="https://sportmaniacs.com" />

    <!-- Preload critical assets -->
    <link rel="preload" href="/logo.webp" as="image" type="image/webp" />
    <link rel="preload" href="/logo.jpg" as="image" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/manifest.json" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(eventSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  </head>
  <body class="min-h-screen bg-danger-black text-white antialiased">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-danger-red focus:text-white focus:px-4 focus:py-2 focus:rounded">Saltar al contenido principal</a>
    <slot />
  </body>
</html>
