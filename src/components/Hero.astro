<section
  class="min-h-screen flex flex-col splatter-bg noise-overlay px-4 py-6 relative overflow-hidden"
  aria-label="Hero principal - OCR Danger Extreme"
>
  <!-- Partículas decorativas -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
  </div>

  <div class="relative z-10 text-center flex-1 flex flex-col justify-center">
    <!-- Warning tape decorativo superior -->
    <div class="warning-tape relative max-w-sm mx-auto px-16 py-3 -rotate-1 shadow-lg shadow-danger-yellow/30 overflow-hidden mb-2 md:mb-4" aria-hidden="true">
      <span class="warning-text relative z-10 inline-block bg-danger-black text-danger-yellow px-6 py-1 font-black text-xs tracking-[0.4em] uppercase border-2 border-danger-yellow">DANGER EXTREME</span>
    </div>

    <!-- Logo con efectos -->
    <div class="logo-wrapper mb-3 md:mb-5">
      <div class="pulse-ring w-36 h-36 md:w-48 md:h-48 lg:w-64 lg:h-64 rounded-full">
        <img
          src="/logo.webp"
          alt="Logo OCR Danger Extreme - Calavera con señal de peligro"
          width="320"
          height="320"
          loading="eager"
          decoding="async"
          fetchpriority="high"
          class="logo-image w-full h-full object-contain rounded-full animate-logo"
        />
      </div>
    </div>

    <!-- Título con efecto glitch -->
    <h1 class="font-black text-3xl md:text-5xl lg:text-7xl tracking-wider mb-1 animate-entrance title-main"
        style="animation-delay: 0.3s;">
      <span class="block text-danger-yellow drop-shadow-[0_0_10px_rgba(212,160,23,0.5)]">OCR</span>
      <span class="glitch-text text-white inline-block my-1" data-text="DANGER">DANGER</span>
      <span class="block text-danger-red drop-shadow-[0_0_15px_rgba(229,57,53,0.7)] tracking-[0.3em]">EXTREME</span>
    </h1>

    <!-- Línea decorativa -->
    <div class="flex items-center justify-center gap-4 my-3 md:my-4 animate-entrance" style="animation-delay: 0.4s;" aria-hidden="true">
      <div class="h-[2px] w-16 md:w-32 bg-gradient-to-r from-transparent to-danger-yellow"></div>
      <span class="text-danger-red text-2xl" role="img" aria-label="Calavera decorativa">☠</span>
      <div class="h-[2px] w-16 md:w-32 bg-gradient-to-l from-transparent to-danger-red"></div>
    </div>

    <!-- Subtítulo con fecha y lugar -->
    <div class="animate-entrance" style="animation-delay: 0.5s; opacity: 0;">
      <p class="text-xl md:text-2xl lg:text-3xl font-black mb-1">
        <time datetime="2026-08-01" class="text-danger-yellow">1 AGOSTO</time>
        <span class="text-white mx-2" aria-hidden="true">•</span>
        <span class="text-danger-red">2026</span>
      </p>
      <p class="text-base md:text-lg text-gray-400 uppercase tracking-[0.2em]">
        <span itemscope itemtype="https://schema.org/Place">
          <span itemprop="name">Caleta de Fuste</span>, <span itemprop="addressRegion">Fuerteventura</span>
        </span>
      </p>
    </div>

    <!-- Stats rápidos -->
    <div class="flex justify-center gap-4 md:gap-6 mt-3 md:mt-4 animate-entrance" style="animation-delay: 0.6s; opacity: 0;" role="list" aria-label="Datos del evento">
      <div class="text-center" role="listitem">
        <span class="block text-2xl md:text-3xl font-black text-danger-yellow">6</span>
        <span class="text-[10px] md:text-xs uppercase tracking-wider text-gray-500">Kilómetros</span>
      </div>
      <div class="text-center border-x border-gray-700 px-6" role="listitem">
        <span class="block text-2xl md:text-3xl font-black text-danger-red" aria-label="Múltiples">∞</span>
        <span class="text-[10px] md:text-xs uppercase tracking-wider text-gray-500">Obstáculos</span>
      </div>
      <div class="text-center" role="listitem">
        <span class="block text-2xl md:text-3xl font-black text-danger-yellow">1</span>
        <span class="text-[10px] md:text-xs uppercase tracking-wider text-gray-500">Oportunidad</span>
      </div>
    </div>

    <!-- CTA Principal -->
    <div class="animate-entrance mt-4 md:mt-6 px-4" style="animation-delay: 0.7s; opacity: 0;">
      <div class="inline-block bg-gray-900/80 border border-danger-yellow/50 rounded-lg px-5 py-3 text-center">
        <p class="text-danger-yellow font-bold text-xs md:text-sm uppercase tracking-wider mb-0.5">Inscripciones</p>
        <p class="text-white text-lg md:text-xl font-black">Marzo 2026</p>
      </div>
      <p class="hidden md:block text-gray-500 text-sm mt-2 uppercase tracking-wider">Prepárate...</p>
    </div>
  </div>

  <!-- Scroll indicator - solo en desktop -->
  <div class="hidden md:flex flex-col items-center gap-1 pb-4 z-20" aria-hidden="true">
    <span class="text-gray-600 text-xs uppercase tracking-widest">Scroll</span>
    <div class="w-5 h-8 border-2 border-gray-700 rounded-full flex justify-center pt-1">
      <div class="w-1 h-2 bg-danger-red rounded-full animate-bounce"></div>
    </div>
  </div>
</section>

<style>
  .animate-entrance {
    animation: entrance 1s ease-out forwards;
  }

  .animate-logo {
    animation:
      logo-entrance 1.2s ease-out forwards,
      pulse-glow 3s ease-in-out 1.2s infinite;
  }

  @keyframes entrance {
    0% {
      opacity: 0;
      transform: scale(0.8) translateY(20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes logo-entrance {
    0% {
      opacity: 0;
      transform: scale(0.5) rotate(-10deg);
      filter: blur(10px);
    }
    50% {
      transform: scale(1.1) rotate(2deg);
    }
    100% {
      opacity: 1;
      transform: scale(1) rotate(0deg);
      filter: blur(0);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      filter: drop-shadow(0 0 15px rgba(229, 57, 53, 0.6));
    }
    50% {
      filter: drop-shadow(0 0 30px rgba(212, 160, 23, 0.8));
    }
  }

  .title-main {
    text-shadow: 0 0 40px rgba(0,0,0,0.8);
  }

  /* Warning tape - solo el fondo rayado */
  .warning-tape::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      -45deg,
      #D4A017,
      #D4A017 15px,
      #1a1a1a 15px,
      #1a1a1a 30px
    );
    z-index: 0;
  }

  /* Partículas flotantes - reducir animación para rendimiento */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #D4A017;
    border-radius: 50%;
    opacity: 0.5;
    animation: float 6s ease-in-out infinite;
    will-change: transform, opacity;
  }

  .particle-1 { top: 20%; left: 10%; animation-delay: 0s; }
  .particle-2 { top: 60%; left: 85%; animation-delay: 1s; background: #E53935; }
  .particle-3 { top: 80%; left: 20%; animation-delay: 2s; }
  .particle-4 { top: 30%; left: 75%; animation-delay: 3s; background: #E53935; }
  .particle-5 { top: 70%; left: 50%; animation-delay: 4s; }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.5; }
    50% { transform: translateY(-20px) rotate(180deg); opacity: 1; }
  }

  /* Reducir animaciones para usuarios que lo prefieran */
  @media (prefers-reduced-motion: reduce) {
    .animate-entrance,
    .animate-logo {
      animation: none;
      opacity: 1;
    }
    .particle {
      animation: none;
    }
    .glitch-text::before,
    .glitch-text::after {
      animation: none;
    }
  }
</style>
